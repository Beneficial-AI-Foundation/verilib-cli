pub proof fn lemma_div_and_mod_51(ai:u64, bi: u64, v: u64)
    requires
        ai == v >> 51,
        bi == v & mask51
    ensures
        ai == v / (pow2(51) as u64),
        bi == v % (pow2(51) as u64),
        v == ai * pow2(51) + bi
{
    l51_bit_mask_lt(); // mask51 == low_bits_mask(51)
    lemma_div_and_mod(ai, bi, v, 51);
}