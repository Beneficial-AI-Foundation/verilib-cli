pub open spec fn load8_at_spec(input: &[u8], i: usize) -> nat
{
    (
    pow2(0 * 8) * input[i + 0] +
    pow2(1 * 8) * input[i + 1] +
    pow2(2 * 8) * input[i + 2] +
    pow2(3 * 8) * input[i + 3] +
    pow2(4 * 8) * input[i + 4] +
    pow2(5 * 8) * input[i + 5] +
    pow2(6 * 8) * input[i + 6] +
    pow2(7 * 8) * input[i + 7]
    ) as nat
}